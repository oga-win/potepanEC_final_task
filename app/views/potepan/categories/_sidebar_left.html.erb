<% taxonomies.each do |taxonomy| %>
  <li>
    <a href="javascript:;" data-toggle="collapse" data-target="#<%= taxonomy.id %>"><%= taxonomy.name %><i class="fa fa-plus"></i></a>
    <ul id="<%= taxonomy.id %>" class="collapse collapseItem">
      <% taxonomy.root.leaves.each do |taxon| %>
        <li><%= link_to potepan_category_path(taxon.id) do %><i class="fa fa-caret-right" aria-hidden="true"></i><%= taxon.name %><span>(<%= taxon.products.count %>)</span></li><% end %>
      <% end %>
    </ul>
  </li>
<% end %>
